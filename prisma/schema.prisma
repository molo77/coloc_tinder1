datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  age       Int
  image     String
  createdAt DateTime @default(now())
  listings  Listing[]
}

model Listing {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  location    String
  price       Float
  ownerId     Int
  owner       User     @relation(fields: [ownerId], references: [id])
  createdAt   DateTime @default(now())
}
